<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <me.ibrahimsn.lib.TaskProgressView
        android:id="@+id/taskProgressView"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:layout_marginTop="40dp"
        app:scrollingEnabled="true"
        app:rangeLength="7"
        app:sidePadding="26dp"
        app:taskLineWidth="10dp"
        app:taskLineSpacing="42dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/taskProgressView">

        <Button
            android:id="@+id/buttonToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="8dp"
            android:text="Today"
            android:textColor="#424242"
            android:textSize="13sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/buttonNextWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="8dp"
            android:text="Next Week"
            android:textColor="#424242"
            android:textSize="13sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/buttonToggleScrolling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="12dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="Disable scrolling"
            android:textAllCaps="false"
            android:textColor="#424242"
            android:textSize="13sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>